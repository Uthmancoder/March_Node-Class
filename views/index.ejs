<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div>
      <h1 class="text-center text-primary">Todo Application</h1>
      <form
        action="/"
        method="post"
        class="d-flex align-items-center gap-4 flex-column p-3 rounded-3 shadow col-10 col-md-8 col-lg-5 mx-auto"
      >
        <div class="w-100">
          <label for="title">Todo Title</label>
          <input
            name="title"
            type="text"
            placeholder="Add Todo Title"
            class="form-control w-100"
          />
        </div>
        <div class="w-100">
          <label for="content">Todo Content</label>
          <input
            name="content"
            type="text"
            placeholder="Add Todo Content"
            class="form-control w-100"
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">Add Todo</button>
      </form>

      <div>
        <h2 class="text-center text-primary">Todo Lists</h2>
        <div>
          <table class="border p-3 rounded-3 mx-auto w-50">
            <!-- Header Section -->
            <tr class="border p-3 rounded-3">
              <td class="border p-2">Todo Title</td>
              <td class="border p-2">Todo Content</td>
              <td class="border p-2">Action</td>
            </tr>
            <% if (todoArray.length > 0) { %> <% todoArray.forEach((element, index) => {
            %>

            <tr>
              <td class="border p-2"><%= element.todoTitle %></td>
              <td class="border p-2"><%= element.todoContent %></td>
              <td class="border p-2 d-flex align-items-center gap-3"> 
                <form action="/deleteTodo/<%= element._id %>" method="post">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <form action="/editTodo/<%= element._id %>" method="post">
                  <button type="submit" class="btn btn-warning">Update</button>
                </form>
              </td>
            </tr>

            <% }) %> <%} %>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
